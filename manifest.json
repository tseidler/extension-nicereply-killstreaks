{
  "manifest_version": 2,

  "name": "OGD Nicereply Killstreak",
  "description": "Track nicereply killstreaks",
  "version": "1.0",
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"},

  "browser_action": {
    "default_icon": "assets/images/icon48.png",
    "default_title": "Killstreak",
    "default_popup": "config.html"
  },

  "permissions": [
    "<all_urls>",
    "alarms"
  ]
}
